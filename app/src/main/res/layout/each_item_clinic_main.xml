<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivClinic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_rspets"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvCardClinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_clinic"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ivClinic"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvClinicLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Babakan, Kota Bogor"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/iconlocation"
            app:layout_constraintTop_toBottomOf="@+id/tvCardClinicName"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvClinicTimeOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:text="Buka | 10.00 - 17.30"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/iconhistory"
            app:layout_constraintTop_toBottomOf="@+id/tvClinicLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>