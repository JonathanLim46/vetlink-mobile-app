<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/linePostDialog"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFirstLineDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:text="Tandai Selesai"
            android:textSize="16sp"
            android:drawablePadding="12dp"
            app:drawableLeftCompat="@drawable/icondone"
            app:layout_constraintTop_toBottomOf="@+id/linePostDialog"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/lineDone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/defaultIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvFirstLineDialog"
            app:layout_constraintStart_toStartOf="@+id/tvFirstLineDialog"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSecondLineDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="Hapus Postingan"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:drawablePadding="12dp"
            android:drawableTint="@color/red"
            app:drawableLeftCompat="@drawable/icontrash"
            app:layout_constraintTop_toBottomOf="@+id/lineDone"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/lineDelete"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:background="@color/defaultIcon"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSecondLineDialog"
            app:layout_constraintStart_toStartOf="@+id/tvSecondLineDialog"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>