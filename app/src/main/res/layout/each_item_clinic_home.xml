<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="158dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="12dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:background="@drawable/layout_border_card_second">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvClinic"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivClinic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_rspets"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCardClinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klinik Hewan IPB"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvClinic"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvClinicLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Sukmajaya, Depok"
            android:textSize="11sp"
            android:fontFamily="sans-serif-light"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/icon_location"
            app:drawableTint="@color/lightwhite"
            app:layout_constraintTop_toBottomOf="@+id/tvCardClinicName"
            app:layout_constraintStart_toStartOf="@+id/tvCardClinicName"
            />

        <TextView
            android:id="@+id/tvClinicTimeOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="Buka | 10.00 - 17.30"
            android:textSize="11sp"
            android:fontFamily="sans-serif-light"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/icon_history"
            app:drawableTint="@color/lightwhite"
            app:layout_constraintTop_toBottomOf="@+id/tvClinicLocation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvClinicLocation"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
