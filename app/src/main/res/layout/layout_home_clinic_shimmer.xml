<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:background="@drawable/layout_border_card_second"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_card_second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivClinic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/layout_shimmer_background"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvClinicNameShimmer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/layout_shimmer_background"
            app:layout_constraintTop_toBottomOf="@id/cardImage"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/iconLocationShimmer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_location"
            app:tint="@color/lightwhite"
            app:layout_constraintTop_toBottomOf="@+id/tvClinicNameShimmer"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvClinicLocationShimmer"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_shimmer_background"
            app:layout_constraintTop_toTopOf="@+id/iconLocationShimmer"
            app:layout_constraintBottom_toBottomOf="@id/iconLocationShimmer"
            app:layout_constraintStart_toEndOf="@+id/iconLocationShimmer"
            />

        <ImageView
            android:id="@+id/iconTimeShimmer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_history"
            app:tint="@color/lightwhite"
            app:layout_constraintTop_toBottomOf="@+id/iconLocationShimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/layout_shimmer_background"
            app:layout_constraintTop_toTopOf="@+id/iconTimeShimmer"
            app:layout_constraintStart_toEndOf="@+id/iconTimeShimmer"
            app:layout_constraintBottom_toBottomOf="@id/iconTimeShimmer"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>