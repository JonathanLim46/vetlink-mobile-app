<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvDateSchedule"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="120dp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/layout_border_oval_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tvFullDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Friday, October 2024"
            android:textSize="18sp"
            android:textColor="@color/purple"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="@+id/tvDateSchedule"
            app:layout_constraintBottom_toBottomOf="@id/tvDateSchedule"
            app:layout_constraintStart_toEndOf="@+id/tvDateSchedule"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvClinicNameSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="@string/default_clinic"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvFullDate"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvPetNameSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mbal"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/icon_pets"
            app:drawableTint="@color/defaultIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvClinicNameSchedule"
            app:layout_constraintStart_toStartOf="@+id/tvClinicNameSchedule"
            />

        <TextView
            android:id="@+id/tvScheduleClinicLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Dramaga, Kab. Bogor"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/icon_location"
            app:drawableTint="@color/defaultIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvPetNameSchedule"
            app:layout_constraintStart_toStartOf="@+id/tvClinicNameSchedule"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>