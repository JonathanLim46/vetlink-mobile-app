<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border_card_second"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivClinicPage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@color/shimmerColor"
        app:shapeAppearanceOverlay="@style/ImageClinicPage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvClinicTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_shimmer_background"
        app:layout_constraintTop_toBottomOf="@+id/ivClinicPage"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvClinicLocationPage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_shimmer_background"
        app:layout_constraintTop_toBottomOf="@id/tvClinicTitle"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>